
@model SignUpViewModel
@{
    ViewData["Title"] = Model.Title;
}
<section class="signup">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignUp" novalidate>

            <partial name="~/Views/Shared/Sections/_StatusMessage.cshtml" />

            <h1>Skapa konto</h1>
            <p>Har du redan ett konto? <a asp-controller="Auth" asp-action="SignIn">Logga in här</a></p>
            <div class="content">
                <!-- First Name Input -->
                <div id="form-firstname" class="input-group">
                    <label asp-for="Form.FirstName" class="form-label" for="firstname">Förnamn</label>
                    <input asp-for="Form.FirstName" id="firstname" aria-required="true" />
                    <span asp-validation-for="Form.FirstName" class="form-error" role="alert"></span>
                </div>

                <!-- Last Name Input -->
                <div id="form-lastname" class="input-group">
                    <label asp-for="Form.LastName" class="form-label" for="lastname">Efternamn</label>
                    <input asp-for="Form.LastName" id="lastname" aria-required="true" />
                    <span asp-validation-for="Form.LastName" class="form-error" role="alert"></span>
                </div>

                <!-- Email Input -->
                <div id="form-email" class="input-group">
                    <label asp-for="Form.Email" class="form-label" for="email">E-postadress</label>
                    <input asp-for="Form.Email" id="email" aria-required="true" aria-describedby="email-error" />
                    <span asp-validation-for="Form.Email" id="email-error" class="form-error" role="alert"></span>
                </div>

                <!-- Password Input -->
                <div id="form-password" class="input-group">
                    <label asp-for="Form.Password" class="form-label" for="password">Lösenord</label>
                    <input asp-for="Form.Password" id="password" type="password" aria-required="true" aria-describedby="password-error" />
                    <span asp-validation-for="Form.Password" id="password-error" class="form-error" role="alert"></span>
                </div>

                <!-- Confirm Password Input -->
                <div id="form-confirm" class="input-group">
                    <label asp-for="Form.ConfirmPassword" class="form-label" for="confirmPassword">Bekräfta lösenord</label>
                    <input asp-for="Form.ConfirmPassword" id="confirmPassword" type="password" aria-required="true" aria-describedby="confirm-error" />
                    <span asp-validation-for="Form.ConfirmPassword" id="confirm-error" class="form-error" role="alert"></span>
                </div>

                <!-- Terms and Conditions Checkbox -->
                <div id="form-terms" class="checkbox">
                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="Form.TermsAndCondition" id="terms" aria-labelledby="termsLabel" />
                            <label asp-for="Form.TermsAndCondition" id="termsLabel">jag godkänner villkoren</label>
                        </div>
                    </div>
                    <span asp-validation-for="Form.TermsAndCondition" class="form-error" role="alert"></span>
                </div>

            </div>
            <button id="form-button" class="btn-accent-orange" type="submit" aria-label="Create account">@Model.Title</button>
        </form>
    </div>
</section>

@await Html.PartialAsync("~/Views/Shared/_ValidationScriptPartial.cshtml")