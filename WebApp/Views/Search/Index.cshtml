@model Infrastructure.Models.SearchViewModel
<section id="search">
    <input type="hidden" id="currentUsername" value="@User.Identity.Name" />
    <div class="container">
        @await Html.PartialAsync("~/Views/Shared/Sections/_StatusMessage.cshtml")
        <h1>Tillgängliga Förfrågningar</h1>
        
        <div class="heading">
            <form method="post" asp-controller="Search" asp-action="Index">
                <div class="content">

                    <div id="form-departure" class="input-group">
                        <input asp-for="SearchModel!.Origin" id="origin" />
                    </div>
                    <div id="form-destination" class="input-group">
                        <input asp-for="SearchModel!.Destination" id="destination" />
                    </div>
                   
                    <div id="form-date" class="input-group">
                        <input asp-for="SearchModel!.DepartureTime" />
                    </div>
                    <button id="form-button" class="btn-accent-yellow" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>

                    <!-- 📌 Toggle button for new request -->
                    <div class="input-group">
                        <button class="btn-theme" type="button" data-bs-toggle="collapse" data-bs-target="#postRequestForm">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </div>

                </div>
            </form>
            <div class="system-note">
                <strong>Observera!</strong> Alla förfrågningar som har passerat datumet kommer att tas bort automatiskt av systemet.
            </div>
            <!-- Collapsible new request form -->
            <div class="collapse" id="postRequestForm">
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h4 class="mb-0">En ny förfrågan</h4>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Search" asp-action="Create" method="post" class="row g-3">
                            <!-- Origin -->
                            <div class="form-group">
                                <label for="origin">Origin:</label>
                                <div class="select-wrapper">
                                    @await Html.PartialAsync("~/Views/Shared/Sections/_VillageSelect.cshtml", "NewRequest.Origin")
                                </div>
                            </div>

                            <!-- Destination -->
                            <div class="form-group">
                                <label for="destination">Destination:</label>
                                <div class="select-wrapper">
                                    @await Html.PartialAsync("~/Views/Shared/Sections/_VillageSelect.cshtml", "NewRequest.Destination")
                                </div>
                            </div>
                            <div class="input-group">
                                <input asp-for="NewRequest.DepartureTime" type="datetime-local" class="input-group" />
                                <span class="text-danger" asp-validation-for="NewRequest.DepartureTime"></span>
                            </div>
                            <div class="input-group">
                                <input asp-for="NewRequest.SeatsRequired" type="number" placeholder="Antal platser" />
                                <span class="text-danger" asp-validation-for="NewRequest.SeatsRequired"></span>
                            </div>
                            <div class="input-group">
                                <textarea asp-for="NewRequest.Notes" placeholder="Extra information (valfritt)"></textarea>
                                <span class="text-danger" asp-validation-for="NewRequest.Notes"></span>
                            </div>
                            <div class="input-group">
                                <button type="submit" class="btn btn-theme-s">Posta</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


            <!-- 📋 Requests List -->
            @if (Model.Requests.Any())
            {
                @foreach (var req in Model.Requests)
                {
                    <div class="request-card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-bold text-muted">
                                    @(req.DepartureTime?.ToString("dd.MM.yyyy") ?? "Ingen tid angiven")
                                </div>
                                <div class="fs-5">
                                    <span class="fw-bold">@req.Origin</span> →
                                    <span class="fw-bold">@req.Destination</span>
                                </div>
                                <div class="text-muted small">
                                    @(req.DepartureTime?.ToString("HH:mm") ?? "--:--")
                                </div>
                                <div>
                                    <span class="badge bg-info">
                                        @(req.SeatsRequired == 1 ? "1 plats" : $"{req.SeatsRequired} platser")
                                    </span>

                                </div>
                                @if (!string.IsNullOrWhiteSpace(req.Notes))
                                {
                                    <p class="fst-italic mt-2 mb-0">@req.Notes</p>
                                }
                            </div>

                            <div class="text-center">
                                @if (req.UserImgUrl != null)
                                {
                                    <img src="~/images/uploads/profiles/@req.UserImgUrl" class="rounded-circle mb-1" width="48" height="48" />
                                }
                                else
                                {
                                    <img src="~/images/uploads/profiles/avatar.svg" class="rounded-circle mb-1" width="48" height="48" />
                                }

                                <div class="small">@req.UserName</div>

                                <button class="btn-chat" type="button"
                                        data-request-id="@req.Id"
                                        onclick="toggleSearchChat(this)">
                                    <i class="fa-regular fa-comment"></i>
                                </button>

                         
                            </div>
                        </div>

                        <!-- 💬 Chat box -->
                        <div id="searchChat-@req.Id" class="search-messages" style="display:none;">
                            <div id="messagesBox-@req.Id" class="messages-box">
                                @if (req.Messages != null && req.Messages.Any())
                                {
                                    foreach (var msg in req.Messages)
                                    {
                                        <div class="message-item">
                                            <strong>@msg.Sender:</strong> @msg.Text
                                            <div class="timestamp">@msg.Timestamp.ToString("g")</div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">Inga meddelanden ännu.</p>
                                }
                            </div>
                            <form onsubmit="sendSearchMessage(event, @req.Id)">
                                <input type="text" id="messageText-@req.Id" placeholder="Skriv ett meddelande..." required />
                                <button type="submit" class="btn-gray">Skicka</button>
                            </form>
                        </div>

                    </div>
                }
            }
            else
            {
                <p class="text-muted">Inga förfrågningar hittades.</p>
            }

            

        </div>


    </div>
</section>

<script src="~/js/searchChatbox.js"></script>