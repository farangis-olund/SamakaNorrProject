@model AccountDetailViewModel
@{
	ViewData["Title"] = $"{Model.ProfileInfo.FirstName} {Model.ProfileInfo.LastName}'s profile";
}

<div class="container">
	<section id="account-security">
		<partial name="_AsideProfile.cshtml" />

		<div class="details">
			<partial name="~/Views/Shared/Sections/_StatusMessage.cshtml" />
			
			<section class="password-info">
				<form method="post" asp-controller="Account" asp-action="AccountSecurity">
					<h2>Säkerhet</h2>
					<h5>Lösenord</h5>

					<div class="content">
						<div id="current-password" class="input-group">
							<label asp-for=SecurityInfo.CurrentPassword></label>
							<span asp-validation-for="SecurityInfo.CurrentPassword"></span>
							<input asp-for="SecurityInfo.CurrentPassword" />
						</div>
						<div id="new-password" class="input-group">
							<label asp-for=SecurityInfo.Password></label>
							<span asp-validation-for="SecurityInfo.Password"></span>
							<input asp-for="SecurityInfo.Password" />
						</div>
						<div id="confirm-password" class="input-group">
							<label asp-for="SecurityInfo.ConfirmPassword"></label>
							<span asp-validation-for="SecurityInfo.ConfirmPassword"></span>
							<input asp-for="SecurityInfo.ConfirmPassword" />
						</div>
						
						<div class="form-buttons">
							<button class="btn-gray" type="reset">Avbryt</button>
							<button class="btn-theme" type="submit">Spara lösenord</button>
						</div>
					</div>
				</form>

			</section>
			<hr />
			<section class="delete-account">
				<form method="post" asp-controller="Account" asp-action="AccountSecurity">
					<h5>Radera konto</h5>
					<div class="content">
						<p>När du raderar ditt konto kommer din offentliga profil att inaktiveras omedelbart. Om du ändrar dig inom 14 dagar kan du logga in med din e-postadress och ditt lösenord, så skickar vi en länk för att återaktivera ditt konto.</p>
						
						<div id="form-terms" class="checkbox">
							<div class="checkbox-group">
								<div class="input-group">
									<input asp-for="SecurityInfo.DeleteAccount" />
									<label asp-for="SecurityInfo.DeleteAccount">Ja, jag vill radera mitt konto.</label>
								</div>
							</div>
							<span asp-validation-for="SecurityInfo.DeleteAccount"></span>
						</div>
						<div class="form-button">
							<button class="btn-red" type="submit">Radera</button>
						</div>
					</div>
				</form>
			</section>
		</div>
	</section>
</div>
@await Html.PartialAsync("_ValidationScriptPartial");